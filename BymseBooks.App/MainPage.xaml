<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ui="clr-namespace:BymseBooks.Ui;assembly=BymseBooks.Ui"
             xmlns:app="using:BymseBooks.App"
             x:Class="BymseBooks.App.MainPage">

    <app:CustomBlazorWebView x:Name="BlazorWebView" HostPage="wwwroot/index.html">
        <app:CustomBlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type ui:EntryPoint}" />
        </app:CustomBlazorWebView.RootComponents>
    </app:CustomBlazorWebView>
</ContentPage>