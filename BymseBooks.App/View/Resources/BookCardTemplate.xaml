<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="using:BymseBooks.App"
    xmlns:viewModel="clr-namespace:BymseBooks.App.ViewModel"
    x:DataType="viewModel:BookViewModel">
    <DataTemplate x:Key="BookCardTemplate">
        <Border Style="{StaticResource BookCardBorder}">
            <Frame Style="{StaticResource BookCardWrapper}">
                <FlexLayout Style="{StaticResource BookCard}" Direction="Column">
                    <Label Text="{Binding Title}" Style="{StaticResource BookCardTitle}" />
                    <Label FlexLayout.Grow="1"
                           Text="{Binding Author}"
                           Style="{StaticResource BookCardAuthor}" />
                    <Label Text="{Binding Tags}" Style="{StaticResource BookCardTags}" />
                </FlexLayout>
            </Frame>
        </Border>
    </DataTemplate>
</ResourceDictionary>