<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="using:BymseBooks.App"
    xmlns:viewModel="clr-namespace:BymseBooks.App.ViewModel"
    x:DataType="viewModel:BookViewModel">
    <DataTemplate x:Key="BookCardTemplate">
        <Frame>
            <Frame.GestureRecognizers>
                <ClickGestureRecognizer Command="{Binding GoToBookPageCommand}" />
            </Frame.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="{Binding Title}" />
                <Label Text="{Binding Author}" />
            </VerticalStackLayout>
        </Frame>
    </DataTemplate>
</ResourceDictionary>