<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="using:BymseBooks.App"
             xmlns:viewmodel="clr-namespace:BymseBooks.App.ViewModel"
             x:Class="BymseBooks.App.MainPage"
             x:DataType="viewmodel:MainPageViewModel">

    <Shell.TitleView>
        <HorizontalStackLayout>
            <app:TopBarActionsButton />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ScrollView>
        <CollectionView
            ItemsSource="{Binding Books}"
            SelectedItem="None"
            ItemTemplate="{StaticResource BookCardTemplate}">
        </CollectionView>
    </ScrollView>

</ContentPage>